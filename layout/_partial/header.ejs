<header id="header">
  <div id="banner"></div>
  <div id="header-outer">
    <div id="header-title">
      <h1 id="site-title">
        <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
      </h1>
      <% if (theme.subtitle){ %>
      <h2 id="site-description"><%= theme.subtitle %></a></h2>
      <% } %>
    </div>
    <div id="header-inner">
      <nav id="main-nav" class="navbar navbar-inverse navbar-toggleable-md bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#main-nav-links" aria-controls="main-nav-links" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <span id="main-nav-brand" class="navbar-brand collapse" href="<%- url_for() %>">#</span>
        <div class="collapse navbar-collapse" id="main-nav-links">
          <ul class="navbar-nav mr-auto">
            <% for (var i in theme.menu){ %>
            <li class="nav-item"><a class="nav-link" href="<%- url_for(theme.menu[i]) %>" title="<%= i%>"><%= i %></a></li>
            <% } %>
            <% if (theme.rss){  %>
            <li class="nav-item"><a id="nav-rss-link" class="nav-link" href="<%- theme.rss %>" title="<%= __('rss_feed') %>"><%= __('rss_feed') %></a></li>
            <% } %>
          </ul>
          <% if (theme.search.enable){ %>
          <form class="form-inline" method="get" accept-charset="UTF-8" action="<%- theme.search.url || '//google.com/search' %>">
            <input type="hidden" name="sitesearch" value="<%- config.url.replace(/^[^:]*:\/\//, '').replace(/\/.*/, '') %>" />
            <input class="form-control" type="text" placeholder="<%= __('search') %>" name="<%- theme.search.keyword || 'q' %>" />
            <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit"><%= __('search') %></button>
          </form>
          <% } %>
        </div>
      </nav>
    </div>
  </div>
</header>