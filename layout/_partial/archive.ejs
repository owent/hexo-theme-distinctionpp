<% if (summary) { %>
<article class="article-panel article-page" itemscope itemprop="blogPost">
  <div class="article-panel-inner article-inner">
    <div class="article-inner">
      <% for(var i in (config.widgets || theme.widgets)) { %>
      <%- partial('_widget/' + (config.widgets || theme.widgets)[i]) %>
      <% } %>
    </div>
  </div>
</article>
<% } else { %>
<% page.posts.each(function(post, i) { %>
  <%- partial('archive-post', {post: post}) %>
<% }); %>
<% } %>