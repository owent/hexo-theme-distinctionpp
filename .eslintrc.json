{
  "env": {
    "es6": true,
    "node": true
  },
  // JavaScript 语言选项
  "parserOptions": {
    // ECMAScript 版本
    "ecmaVersion": 6,
    "sourceType": "script", //module
    // 想使用的额外的语言特性:
    "ecmaFeatures": {
      // 允许在全局作用域下使用 return 语句
      "globalReturn": true,
      // impliedStric
      "impliedStrict": true,
      // 启用 JSX
      "jsx": true
    }
  },
  "rules": { // 0 for off, 1 for on, 2 for error
    "max-len": [
      "warn",
      180
    ],
    "no-tabs": "error",
    "no-mixed-spaces-and-tabs": "error",
    "indent": [
      "error",
      4
    ]
  }
}